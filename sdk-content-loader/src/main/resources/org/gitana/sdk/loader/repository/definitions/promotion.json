        "code":{
            "title":"Promotion Code",
            "description":"Product promotion code.",
            "type":"string",
            "pattern": "^(\\d{4}-\\d{3}-\\d{4})?$"
        },
        "details":{
            "title":"Promotion Details",
            "description":"Detailed information of this weekly promotion.",
