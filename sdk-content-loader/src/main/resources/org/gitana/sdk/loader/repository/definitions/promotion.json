        },
        "product":{
            "title":"Product Name",
            "description":"Name of the product for weekly promotion.",
            "type":"string"
        },
        "start_date":{
            "title":"Start Date",
            "description":"Promotion start date.",
            "type":"string",
            "format":"date"
        },
        "end_date":{
            "title":"End Date",
            "description":"Promotion end date.",
            "type":"string",
            "format":"date"
        },
        "original_price":{
            "title":"Original Price",
            "description":"Product original price.",
            "type":"object",
            "properties":{
                "price" : {
                    "title":"Price",
                    "description":"Product price.",
                    "type":"number"
                },
                "unit" : {
                    "title":"Unit",
                    "description":"Unit for product price.",
                    "type":"string"
                }
            }
        },
        "promotion_price":{
            "title":"Promotion Price",
            "description":"Product promotion price.",
            "type":"object",
            "properties":{
                "price" : {
                    "title":"Price",
                    "description":"Product price.",
                    "type":"number"
                },
                "unit" : {
                    "title":"Unit",
                    "description":"Unit for product price.",
                    "type":"string"
                }
            }
        },
        "stores":{
            "title":"Promotion Locations",
            "description":"List of stores that will participate this promotion.",
            "type":"array",
            "items": {
                "title": "Store Name",
                "description": "Store name.",
                "type": "string",
                "enum" : [
                    "Scranton, PA",
                    "Utica, NY",
                    "Stamford, CT",
                    "Nashua, NH"
                ]
            }
        }
    }
